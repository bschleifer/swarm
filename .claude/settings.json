{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-commit-check.sh",
            "timeout": 60,
            "statusMessage": "Running pre-commit checks (ruff lint, ruff format)..."
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Skill(check)",
      "Skill(commit)",
      "Skill(diagnose)",
      "Skill(fix-and-ship)",
      "Skill(get-latest)",
      "Skill(interview)",

      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git merge:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",

      "Bash(gh api:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",

      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "Bash(uv build:*)",
      "Bash(uv tool install:*)",
      "Bash(uvx ruff:*)",

      "Bash(curl:*)",
      "Bash(kill:*)",
      "Bash(ls:*)",
      "Bash(sleep:*)",
      "Bash(tmux:*)"
    ]
  }
}
